<%= render(partial: "components/banner/index", locals: {notice: notice}) %>

<h1 class="text-center text-6xl">Articles</h1>

<table class="table-auto">
  <thead>
    <tr>
      <th class="px-4 py-2">Title</th>
      <th class="px-4 py-2">Body</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each.with_index do |article, index| %>
      <tr class="<%= index.odd? && 'bg-gray-100'%>">
        <td class="border px-4 py-2"><span><%= article.published ? '' : 'Draft: ' %></span><%= link_to article.title, article, title: truncate(article.body, length: 500), class: 'text-blue-500 hover:text-blue-800' %></td>
        <td class="border px-4 py-2"><%= link_to truncate(article.body), edit_article_path(article), class: 'text-blue-500 hover:text-blue-800' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: 'text-blue-500 hover:text-blue-800' %>
